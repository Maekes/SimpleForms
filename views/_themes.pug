case formdata.theme
    when "dark" 
        - var theme = "from-gray-700 to-gray-800"
    when "red" 
        - var theme = "from-red-500 to-red-700"
    when "green" 
        - var theme = "from-green-400 to-green-600"
    when "blue" 
        - var theme = "from-blue-600 to-blue-900"
    when "orange" 
        - var theme = "from-yellow-400 to-yellow-600"
    when "yellow" 
        - var theme = "from-yellow-200 to-yellow-400"
    when "pink" 
        - var theme = "from-pink-400 to-pink-600"
    when "insta" 
        - var theme = "from-purple-400 via-pink-500 to-red-500"
    when "rasta" 
        - var theme = "from-green-600 via-yellow-300 to-red-600"
    when "dark" 
        - var theme = "from-gray-700 to-gray-800"
    default
        - var theme = "from-gray-50 to-gray-100"